@model IEnumerable<Models.EF.PHONG>

@{
    ViewBag.Title = "Quản lý phòng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Header{
    <h3 class="fa fa-home">
        @Html.ActionLink("Quản lý Phòng", "Index", new { /* id=item.PrimaryKey */ })
    </h3>
}



                      @using (Html.BeginForm())
                      {
                          <div class="col-lg-12 form-group">
                              <div class="col-md-6">
                                  <p>
                                      @Html.ActionLink("Tạo mới", "Create", "QLD", new { @class = "btn btn-primary" })
                                  </p>
                              </div>

                              <div class="col-md-4">
                                  <input type="text" value="@ViewBag.SearchString" name="searchString"
                                         placeholder="Nhập từ khoá tìm kiếm" class="form-control" />
                              </div>

                              <div class="col-md-2">
                                  <input type="submit" value="Tìm kiếm" class="btn btn-primary" />
                              </div>
                          </div>
                      }
                      <div class="col-lg-12 form-group">
                          <table class=" table">
                              <tr>
                                  <th>STT</th>
              
                                  <th>
                                      @Html.DisplayNameFor(model => model.MaPhong)
                                  </th>
                                  <th>
                                      @Html.DisplayNameFor(model => model.SoCho)
                                  </th>
                                  <th>
                                      @Html.DisplayNameFor(model => model.TinhTrang)
                                  </th>
                                  <th>
                                      @Html.DisplayNameFor(model => model.MaCTD)
                                  </th>
                                  <th>
                                      @Html.DisplayNameFor(model => model.MaCTN)
                                  </th>
                                  <th></th>
                              </tr>
                              @{var i = 1;}
                              @foreach (var item in Model)
                              {
                                  <tr>
                                      <td>
                                          @i
                                      </td>
                                      <td>
                                          @item.MaPhong
                                      </td>
                                      <td>
                                          @item.SoCho
                                      </td>
                                      <td>
                                          @item.TinhTrang
                                      </td>
                                      <td>
                                          @item.MaCTD
                                      </td>
                                      <td>
                                          @item.MaCTN
                                      </td>
                                      <td>
                                          @Html.ActionLink("Sửa", "Edit", new { @item.MaPhong })|
                                          @Ajax.ActionLink("Xoá", "Delete", new { @MaPhong = item.MaPhong }, new AjaxOptions
                                           {
                                                 Confirm = "Bạn có muốn xoá thông tin này",
                                                 OnComplete = "$('#row_" + item.MaPhong + "').remove()",
                                                 HttpMethod = "Delete",
                                                 OnSuccess = "window.location.reload()"
                                             })

                                      </td>

                                  </tr>
                                  i++;
                              }
                          </table>
                          </div>
